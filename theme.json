{
  "version": 3,
  "$schema": "https://schemas.wp.org/wp/6.6/theme.json",
  "settings": {
    "appearanceTools": true,
    "color": {
      "background": true,
      "link": true,
      "text": true,

      "custom": true,
      "palette": [
        {
          "name": "Brand, primary",
          "slug": "brand_primary",
          "color": "var(--theme-color-brand_primary)"
        },
        {
          "name": "Brand, secondary",
          "slug": "brand_secondary",
          "color": "var(--theme-color-brand_secondary)"
        },
        {
          "name": "Brand, tertiary",
          "slug": "brand_tertiary",
          "color": "var(--theme-color-brand_tertiary)"
        },
        {
          "name": "Text, primary",
          "slug": "text_primary",
          "color": "var(--theme-color-text_primary)"
        },
        {
          "name": "Text, secondary",
          "slug": "text_secondary",
          "color": "var(--theme-color-text_secondary)"
        }
      ]
    },
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1400px"
    },
    "spacing": {
      "units": ["%", "px", "em", "rem", "vh", "vw"]
    },
    "typography": {
      "fluid": false,
      "defaultFontSizes": false,
      "fontFamilies": [
        {
          "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
          "name": "System Font",
          "slug": "system-font"
        }
      ],
      "fontSizes": [
        {
          "name": "Extra Small",
          "slug": "xs",
          "size": "var(--theme-font-size-xs)"
        },
        {
          "name": "Small",
          "slug": "sm",
          "size": "var(--theme-font-size-s)"
        },
        {
          "name": "Standard",
          "slug": "standard",
          "size": "var(--theme-font-size-standard)"
        },
        {
          "name": "Large",
          "slug": "l",
          "size": "var(--theme-font-size-l)"
        }
      ]
    },
    "useRootPaddingAwareAlignments": true,
    "shadow": {
      "presets": [
        {
          "name": "Card",
          "slug": "card",
          "shadow": "var(--theme-shadow_card_x_position_outside, -1px) var(--theme-shadow_card_y_position_outside, 2px) var(--theme-shadow_card_blur_outside, 4px) var(--theme-shadow_card_spread_outside, 0px) var(--theme-color_shadow_cards);"
        },
        {
          "name": "Button",
          "slug": "button",
          "shadow": "var(--theme-shadow_button_x_position_outside, 0px) var(--theme-shadow_button_y_position_outside, 0px) var(--theme-shadow_button_blur_outside, 0px) var(--theme-shadow_button_spread_outside, 0px) var(--theme-color-button_outside_shadow), var(--theme-shadow_button_x_position_inside, 0px) var(--theme-shadow_button_y_position_inside, 0px) var(--theme-shadow_button_blur_inside, 0px) var(--theme-shadow_button_spread_inside, 0px) var(--theme-color-button_inside_shadow) inset;"
        }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--theme-color-background)",
      "text": "var(--theme-color-text_primary)"
    },
    "spacing": {
      "padding": {
        "top": "0",
        "bottom": "0",
        "left": "2rem",
        "right": "2rem"
      }
    },

    "elements": {
      "button": {
        "color": {
          "text": "var(--theme-color-button_text)",
          "background": "var(--theme-color-interactive)",
          "gradient": "linear-gradient(90deg,rgba(0,0,0,0) 0%,rgba(0,0,0,0) 100%)"
        },
        "border": {
          "radius": "var(--theme-corner_radius_button)",
          "width": "var(--theme-border_width_button_primary)",
          "color": "var(--theme-color-button_borders_primary)",
          "style": "var(--theme-border_style_button_primary)"
        },
        "shadow": "var:preset|shadow|button",
        "spacing": {
          "padding": {
            "top": "var(--theme-spacing-xs)",
            "bottom": "var(--theme-spacing-xs)",
            "left": "var(--theme-spacing-s)",
            "right": "var(--theme-spacing-s)"
          }
        },
        "typography": {
          "fontSize": "var(--theme-font-size-standard)"
        },
        ":hover": {
          "color": {
            "text": "var(--theme-color-button_text)",
            "background": "var(--theme-color-interactive)",
            "gradient": "linear-gradient(90deg,rgba(0,0,0,.20) 0%,rgba(0,0,0,.20) 100%)"
          }
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--theme-font-size-h1)"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--theme-font-size-h2)"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--theme-font-size-h3)"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--theme-font-size-h4)"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--theme-font-size-h5)"
        }
      }
    },
    "blocks": {
      "core/button": {
        "variations": {
          "outline": {
            "border": {
              "color": "var(--theme-color-interactive)",
              "width": "var(--theme-border_width_button_hollow)",
              "style": "var(--theme-border_style_button_hollow)",
              "radius": "var(--theme-corner_radius_button)"
            },
            "color": {
              "text": "var(--theme-color-interactive)"
            },
            "typography": {
              "fontSize": "var(--theme-font-size-standard)"
            },
            "spacing": {
              "padding": {
                "top": "var(--theme-spacing-xs)",
                "bottom": "var(--theme-spacing-xs)",
                "left": "var(--theme-spacing-s)",
                "right": "var(--theme-spacing-s)"
              }
            }
          }
        }
      },
      "core/paragraph": {
        "color": {
          "text": "var(--theme-color-text_primary)"
        }
      },
      "core/quote": {
        "color": {
          "background": "var(--theme-color-layer_1)"
        },
        "spacing": {
          "margin": {
            "left": "0",
            "right": "0"
          },
          "padding": {
            "top": "var(--theme-spacing-l)",
            "bottom": "var(--theme-spacing-l)",
            "left": "var(--theme-spacing-xl)",
            "right": "var(--theme-spacing-xl)"
          }
        },
        "border": {
          "radius": "var(--theme-corner_radius_small)",
          "left": {
            "style": "solid",
            "width": "3px",
            "color": "var(--theme-color-brand_secondary)"
          }
        }
      },
      "core/list": {
        "spacing": {
          "padding": {
            "top": "var(--theme-spacing-l)",
            "bottom": "var(--theme-spacing-l)",
            "left": "var(--theme-spacing-xxxl)",
            "right": "var(--theme-spacing-l)"
          }
        }
      },
      "core/list-item": {
        "spacing": {
          "margin": {
            "bottom": "var(--theme-spacing-s)"
          },
          "padding": {
            "left": "var(--theme-spacing-xxs)"
          }
        }
      }
    }
  },
  "templateParts": [
    {
      "area": "header",
      "name": "header"
    },
    {
      "area": "footer",
      "name": "footer"
    }
  ]
}
