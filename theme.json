{
  "version": 3,
  "$schema": "https://schemas.wp.org/wp/6.6/theme.json",
  "settings": {
    "appearanceTools": true,
    "color": {
      "background": true,
      "link": true,
      "text": true
    },
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1400px"
    },
    "spacing": {
      "units": ["%", "px", "em", "rem", "vh", "vw"]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
          "name": "System Font",
          "slug": "system-font"
        }
      ]
    },
    "useRootPaddingAwareAlignments": true,
    "shadow": {
      "presets": [
        {
          "name": "Card",
          "slug": "card",
          "shadow": "var(--theme-shadow_card_x_position_outside, -1px) var(--theme-shadow_card_y_position_outside, 2px) var(--theme-shadow_card_blur_outside, 4px) var(--theme-shadow_card_spread_outside, 0px) var(--theme-color-shadow_cards);"
        },
        {
          "name": "Button",
          "slug": "button",
          "shadow": "var(--theme-shadow_button_x_position_outside, 0px) var(--theme-shadow_button_y_position_outside, 0px) var(--theme-shadow_button_blur_outside, 0px) var(--theme-shadow_button_spread_outside, 0px) var(--theme-color-shadow_button_outside, theme-color-shadow_button_outside), var(--theme-shadow_button_x_position_inside, 0px) var(--theme-shadow_button_y_position_inside, 0px) var(--theme-shadow_button_blur_inside, 0px) var(--theme-shadow_button_spread_inside, 0px) var(--theme-color-shadow_button_inside) inset;"
        },
        {
          "name": "Button (Inverse)",
          "slug": "button_inverse",
          "shadow": "var(--theme-shadow_button_x_position_outside, 0px) var(--theme-shadow_button_y_position_outside, 0px) var(--theme-shadow_button_blur_outside, 0px) var(--theme-shadow_button_spread_outside, 0px) var(--theme-color-shadow_button_outside, theme-color-shadow_button_outside_inverse), var(--theme-shadow_button_x_position_inside, 0px) var(--theme-shadow_button_y_position_inside, 0px) var(--theme-shadow_button_blur_inside, 0px) var(--theme-shadow_button_spread_inside, 0px) var(--theme-color-shadow_button_inside) inset;"
        }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--theme-color-background)",
      "text": "var(--theme-color-text_primary)"
    },

    "elements": {
      "button": {
        "color": {
          "text": "var(--theme-color-button_text)",
          "background": "var(--theme-color-interactive)",
          "gradient": "linear-gradient(90deg,rgba(0,0,0,0) 0%,rgba(0,0,0,0) 100%)"
        },
        "border": {
          "radius": "var(--theme-corner_radius_button)",
          "width": "var(--theme-border_width_button_primary)",
          "color": "var(--theme-color-border_button_primary_light)",
          "style": "var(--theme-border_style_button_primary)"
        },
        "shadow": "var:preset|shadow|button",
        "spacing": {
          "padding": {
            "top": "var(--theme-spacing-xs)",
            "bottom": "var(--theme-spacing-xs)",
            "left": "var(--theme-spacing-small)",
            "right": "var(--theme-spacing-small)"
          }
        },
        "typography": {
          "fontSize": "var(--theme-font-size-standard)"
        },
        ":hover": {
          "color": {
            "text": "var(--theme-color-button_text)",
            "background": "var(--theme-color-interactive)",
            "gradient": "linear-gradient(90deg,rgba(0,0,0,.20) 0%,rgba(0,0,0,.20) 100%)"
          }
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--theme-font-size-h1)"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--theme-font-size-h2)"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--theme-font-size-h3)"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--theme-font-size-h4)"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--theme-font-size-h5)"
        }
      }
    },
    "blocks": {
      "core/button": {
        "variations": {
          "outline": {
            "border": {
              "color": "var(--theme-color-interactive)",
              "width": "var(--theme-border_width_button_hollow)",
              "style": "var(--theme-border_style_button_hollow)",
              "radius": "var(--theme-corner_radius_button)"
            },
            "color": {
              "text": "var(--theme-color-interactive)"
            },
            "typography": {
              "fontSize": "var(--theme-font-size-standard)"
            },
            "spacing": {
              "padding": {
                "top": "var(--theme-spacing-xs)",
                "bottom": "var(--theme-spacing-xs)",
                "left": "var(--theme-spacing-small)",
                "right": "var(--theme-spacing-small)"
              }
            }
          }
        }
      },
      "core/paragraph": {
        "color": {
          "text": "var(--theme-color-text_primary)"
        }
      }
    }
  },
  "templateParts": [
    {
      "area": "header",
      "name": "header"
    },
    {
      "area": "footer",
      "name": "footer"
    }
  ]
}
