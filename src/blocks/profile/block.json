{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "rapid/profile",
  "version": "0.1.0",
  "title": "Profile",
  "category": "rapid-theme",
  "icon": "admin-users",
  "description": "A dynamic block for displaying a short bio and profile image",
  "attributes": {
    "layout": {
      "type": "string",
      "default": "horizontal"
    },
    "size": {
      "type": "string",
      "default": "small"
    },
    "imageURL": {
      "type": "string",
      "default": "https://images.pexels.com/photos/774909/pexels-photo-774909.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
    },
    "imageRadius": {
      "type": "string",
      "default": "full"
    },
    "name": {
      "type": "string",
      "default": "Write name here..."
    },
    "displayTitle": {
      "type": "boolean",
      "default": true
    },
    "title": {
      "type": "string",
      "default": "Title"
    },
    "displayBio": {
      "type": "boolean",
      "default": true
    },
    "bio": {
      "type": "string",
      "default": "Write bio here..."
    }
  },
  "example": {
    "attributes": {
      "name": "Sarah Smith",
      "title": "Executive Design Officer"
    }
  },
  "supports": {
    "html": false
  },
  "textdomain": "profile",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "render": "file:./render.php"
}
