{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "rapid/preview-cards",
  "version": "0.1.0",
  "title": "Preview Cards",
  "category": "rapid-theme",
  "description": "A preview of blog content provided in a card with image and text.",
  "attributes": {
    "layout": {
      "type": "string",
      "default": "vertical"
    },
    "columns": {
      "type": "number",
      "default": 3
    },
    "variant": {
      "type": "string",
      "default": "basic"
    },
    "numberOfCards": {
      "type": "number",
      "default": 3
    },
    "order": {
      "type": "string",
      "default": "desc"
    },
    "orderBy": {
      "type": "string",
      "default": "date"
    },
    "selectedCategories": {
      "type": "array",
      "default": []
    },
    "displayAuthor": {
      "type": "boolean",
      "default": true
    },
    "displayCategories": {
      "type": "boolean",
      "default": true
    },
    "hoverEffect": {
      "type": "string",
      "default": "scale-out"
    },
    "animated": {
      "type": "boolean",
      "default": true
    }
  },
  "example": {},
  "supports": {
    "html": false
  },
  "textdomain": "preview-cards",
  "editorScript": "file:./index.js",
  "style": "file:./style-index.css",
  "render": "file:./render.php",
  "viewScript": "file:./view.js"
}